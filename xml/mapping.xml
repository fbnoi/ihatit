<mapping>
    <select name="GetUserByNameAndAge" resultMapper="User">
        SELECT * FROM user WHERE name = :name AND age = :age
        <param name="name" type="string"/>
        <param name="age" type="int"/>
    </select>
    <insert name="AddUser">
        INSERT INTO user (id, name, gender, email) 
        VALUES (:id, :name, :gender, :email)
        <param name="id" type="int"/>
        <param name="name" type="string"/>
        <param name="gender" type="int"/>
        <param name="email" type="string"/>
    </insert>
    <insert name="AddUsers">
        INSERT INTO user (id, name, gender, email) 
        VALUES 
        <batch collection="list">
            <param name="id" type="int"/>
            <param name="name" type="string"/>
            <param name="gender" type="int"/>
            <param name="email" type="string"/>
        </batch>
    </insert>
    <insert name="AddUsers">
        INSERT INTO user (id, name, gender, email) 
        VALUES 
        <batch collection="list">
            <param name="id" type="int"/>
            <param name="name" type="string"/>
            <param name="gender" type="int"/>
            <param name="email" type="string"/>
        </batch>
    </insert>
</mapping>